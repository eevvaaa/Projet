    <ImageView
        android:id="@+id/fauteuil"
        android:layout_width="229dp"
        android:layout_height="173dp"
        android:src="@drawable/fauteuil2"
        app:layout_constraintBottom_toTopOf="@+id/message_already_there"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggle_group_visual"
        app:layout_constraintVertical_bias="0.548" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        style="@style/BottomNavigationStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom" />

    <TextView
        android:id="@+id/message_already_there"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp"
        android:background="#E0CDA9"
        android:fontFamily="@font/montserrat_bold"
        android:padding="18dp"
        android:text="@string/text_deja_visu"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


