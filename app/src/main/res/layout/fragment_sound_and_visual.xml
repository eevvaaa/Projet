<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#E0CDA9"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:title="@string/Mode_S_et_V"
        app:titleCentered="true"
        app:titleTextColor="@color/black"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        app:backgroundTint="@color/white"
        app:cornerRadius="8dp"
        app:icon="@drawable/back_button_icon"
        app:iconSize="30dp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toTopOf="@id/color_pallet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/purple_200"
        app:strokeColor="@color/purple_500"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/setting"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        app:backgroundTint="@color/white"
        app:cornerRadius="8dp"
        app:icon="@drawable/setting_icon"
        app:iconSize="30dp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toTopOf="@id/color_pallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/purple_200"
        app:strokeColor="@color/purple_500"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/color_pallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/color_palette"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggle_group_visual"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:checkedButton="@id/sound_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/color_pallet"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/far"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/far"
            android:textColor="#000000"
            android:textSize="20sp"
            app:backgroundTint="#00FF00"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/middle"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/next_to"
            android:textColor="#000000"
            android:textSize="20sp"
            app:backgroundTint="#FFFF00"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/close"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/close"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            app:backgroundTint="#FF0000"
            app:cornerRadius="24dp" />


    </com.google.android.material.button.MaterialButtonToggleGroup>

