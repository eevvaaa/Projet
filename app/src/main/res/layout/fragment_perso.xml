<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0CDA9"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-324dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#8E44AD"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="@string/Mode_perso"
                app:titleCentered="true"
                app:titleTextColor="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="60dp"
                app:backgroundTint="@color/white"
                app:cornerRadius="8dp"
                app:icon="@drawable/back_button_icon"
                app:iconSize="30dp"
                app:iconTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="@color/purple_200"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:padding="2dp"
                android:text="@string/nom_et_prenoms"
                android:textAlignment="viewStart"
                android:textAppearance="?android:textAppearanceLarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/back_button" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_nom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nom">

                <TextView
                    android:id="@+id/textview_nom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_new_roman"
                    android:padding="16dp"
                    android:text="John Doe"
                    android:textAlignment="viewStart"
                    android:textAppearance="?android:textAppearanceLarge"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/datenaiss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:padding="2dp"
                android:text="@string/date_de_naissance"
                android:textAlignment="viewStart"
                android:textAppearance="?android:textAppearanceLarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardview_nom" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_date_naissance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/datenaiss">

                <TextView
                    android:id="@+id/textview_date_naissance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="01/01/2000"
                    android:textAppearance="?android:textAppearanceLarge" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/maladie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:padding="2dp"
                android:text="@string/ma_difficulte"
                android:textAlignment="viewStart"
                android:textAppearance="?android:textAppearanceLarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardview_date_naissance" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_maladie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/maladie">

                <TextView
                    android:id="@+id/textview_maladie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="DiabÃ¨te"
                    android:textAppearance="?android:textAppearanceLarge" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/gs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:padding="2dp"
                android:text="@string/groupe_sanguin"
                android:textAlignment="viewStart"
                android:textAppearance="?android:textAppearanceLarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardview_maladie" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_groupe_sanguin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gs">

                <TextView
                    android:id="@+id/textview_gs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="A+"
                    android:textAppearance="?android:textAppearanceLarge" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/ug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:padding="2dp"
                android:text="@string/numero_d_urgence"
                android:textAlignment="viewStart"
                android:textAppearance="?android:textAppearanceLarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardview_groupe_sanguin" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_numero_urgence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ug">

                <TextView
                    android:id="@+id/textview_ug"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="0782000011"
                    android:textAppearance="?android:textAppearanceLarge" />

            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_button_to_visual"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/back_to_visual_mode"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                app:cornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardview_numero_urgence"
                app:rippleColor="@color/purple_200"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp"
                 />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_button_to_sound"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/back_to_audio_mode"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                app:cornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/back_button_to_visual"
                app:rippleColor="@color/purple_200"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
