<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomepageFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/title"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#E0CDA9"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageHomepage"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="@font/montserrat_black"
            android:gravity="center"
            android:text="BIENVENUE SUR FREEWHEEL"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="20sp"
            />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageHomepage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/script1"
        />

    <TextView
        android:id="@+id/script1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/times_new_roman"
        android:gravity="center"
        android:text="Avec  FreeWheel  au  quotidien,  c'est  plus  simple  au  quotidien  :)"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageHomepage"
        app:layout_constraintBottom_toTopOf="@id/toggle_group"
        />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggle_group"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        app:rippleColor="@color/purple_200"
        app:strokeColor="@color/purple_500"
        app:strokeWidth="2dp"
        android:checkedButton="@id/sound_button"
        app:singleSelection="true"
        app:checkedButton="@id/sound_button"
        app:layout_constraintTop_toBottomOf="@id/script1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_go"
       >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sound_button"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:fontFamily="@font/times_new_roman"
            android:gravity="center"
            android:text="Sound"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="24dp"
            app:icon="@drawable/sound_icon"
            app:iconGravity="start"
            app:iconSize="40dp"
            app:iconTint="@color/black"
            app:rippleColor="#00FF00"
            app:strokeColor="#E0CDA9"
            app:strokeWidth="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/visual_button"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:fontFamily="@font/times_new_roman"
            android:gravity="center"
            android:text="Visual"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:backgroundTint="@color/white"
            app:cornerRadius="24dp"
            app:icon="@drawable/visual_icon"
            app:iconGravity="start"
            app:iconTint="@color/black"
            app:iconSize="40dp"
            app:rippleColor="#00FF00"
            app:strokeColor="#E0CDA9"
            app:strokeWidth="5dp" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_go"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:fontFamily="@font/times_new_roman"
        android:gravity="center"
        android:text="Let's Go !!"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:onClick="onButtonClicked"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="14dp"
        app:rippleColor="@color/purple_200"
        app:strokeColor="@color/purple_500"
        app:strokeWidth="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toggle_group"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
